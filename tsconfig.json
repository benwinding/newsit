{
  "compilerOptions": {
    "outDir": "./build/ts/",
    "lib": ["DOM", "ES2017"],
    "types": ["jest", "jquery", "chrome"],
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx", "**/*.spec.js"]
}
